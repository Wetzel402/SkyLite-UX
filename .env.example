# SkyLite-UX Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skylite

# Kiosk Mode Configuration
ENABLE_KIOSK_MODE=true
DISPLAY_TOKEN=your-display-token-here

# Calendar Sync Configuration
CALENDAR_SYNC_ENABLED=true
CALDAV_SYNC_ENABLED=false

# Calendar Sources (JSON arrays)
# ICS Feeds - Array of objects with name, url, and optional color
ICS_FEEDS='[{"name":"My Calendar","color":"#4C6FFF","url":"https://example.com/calendar.ics"}]'

# CalDAV Accounts - Array of objects with name, serverUrl, username, password, and optional color
CALDAV_ACCOUNTS='[{"name":"My CalDAV","serverUrl":"https://caldav.example.com","username":"user","password":"pass","color":"#FF6B6B"}]'

# Admin API Configuration
ADMIN_API_TOKEN=your-admin-token-here

# Development/Testing
NODE_ENV=development
PORT=3000
