# Database Configuration
DATABASE_URL=postgresql://skylite:skylite_password@postgres:5432/skylite
POSTGRES_PASSWORD=skylite_password

# Application Configuration
NODE_ENV=production
NUXT_PUBLIC_LOG_LEVEL=info
NUXT_PUBLIC_TZ=America/Chicago

# Optional: Custom ports (defaults in docker-compose.yml)
# FRONTEND_PORT=3000
# POSTGRES_PORT=5432

# Optional: Timezone configuration
# TIMEZONE=America/Chicago

# Optional: Logging configuration
# NUXT_PUBLIC_LOG_LEVEL=debug

# Optional: Integration settings (add as needed)
# ICAL_BASE_URL=https://example.com/calendar.ics
# MEALIE_API_KEY=your_mealie_api_key
# MEALIE_BASE_URL=http://your-mealie-instance:port
# TANDOOR_API_KEY=your_tandoor_api_key
# TANDOOR_BASE_URL=http://your-tandoor-instance:port

# Kiosk Mode Configuration
ENABLE_KIOSK_MODE=true
DISPLAY_TOKEN=your-secure-display-token-here

# Calendar Sync Configuration (Phase 1: ICS)
CALENDAR_SYNC_ENABLED=true
ICS_FEEDS='[{"name":"Family","color":"#4C6FFF","url":"https://example.com/family.ics"},{"name":"School","color":"#E85D04","url":"https://example.com/school.ics"}]'
ICS_SYNC_INTERVAL_SECONDS=900
