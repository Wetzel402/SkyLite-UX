{
  "name": "skylite-ux",
  "type": "module",
  "version": "2025.10.0",
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:unit:watch": "vitest",
    "smoke:events": "node scripts/smoke-events.js",
    "prepare": "playwright install --with-deps",
    "dev:test:e2e": "npm run build && npm run preview & sleep 5 && npm run test:e2e && pkill -f 'nuxt preview'",
    "db:migrate": "npx prisma migrate deploy",
    "db:reset:test": "npx prisma migrate reset --force",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:seed": "npx prisma db seed",
    "db:up": "docker compose -f docker-compose.dev.yml up -d",
    "db:down": "docker compose -f docker-compose.dev.yml down -v",
    "db:psql": "docker compose -f docker-compose.dev.yml exec postgres psql -U postgres",
    "smoke": "node scripts/smoke-sync.mjs"
  },
  "dependencies": {
    "@eslint/plugin-kit": "^0.3.4",
    "@headlessui/vue": "^1.7.19",
    "@heroicons/vue": "^2.1.1",
    "@nuxt/ui": "^3.1.2",
    "@prisma/client": "^6.9.0",
    "@vueuse/core": "^10.9.0",
    "consola": "^3.4.2",
    "date-fns": "^3.3.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "ical.js": "^2.2.0",
    "node-fetch": "^2.7.0",
    "pinia": "^3.0.1",
    "prisma": "^6.9.0",
    "tsdav": "^2.1.5",
    "vue": "~3.5.13",
    "vue-router": "~4.5.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "@iconify-json/lucide": "^1.2.45",
    "@iconify-json/simple-icons": "^1.2.37",
    "@nuxt/eslint": "^1.2.0",
    "@nuxtjs/html-validator": "^2.1.0",
    "@playwright/test": "^1.56.0",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.5.1",
    "@vueuse/nuxt": "^12.7.0",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.2.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-vue": "^9.32.0",
    "npm-run-all2": "^6.1.1",
    "nuxt": "^4.0.1",
    "postcss": "^8.5.3",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "~5.8.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.10"
  }
}
